---
import {Icon} from 'astro-icon/components'

type Props = {
    title: string;
    icon: string;
}

const {icon, title} = Astro.props
---

<div class="skill">
    <h3 class="skill__title">
        {title}
    </h3>

    <div class="skill__icon-container">
        <Icon 
            name={icon}
            size={100}
            class="skill__icon"
        />
    </div>

    <p class="skill__text">
        <slot />
    </p>
</div>

<style>
    .skill {
        text-align: center;
    }

    .skill__title {
        color: var(--color-primary-50);
    }

    .skill__icon-container {
        background-color: var(--color-primary-950);
        padding: 2rem;
        border-radius: 50%;
        max-width: 10rem;
        aspect-ratio: 1/1;
        margin: 0 auto;
    }

    .skill__icon {
        height: auto;
        width: 100%;
        color: var(--color-primary-200);
    }

    .skill__text {
        color: var(--color-primary-200);
    }
</style>